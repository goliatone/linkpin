<div id="modal-submit-link-form" class="modal">
    <div class="modal-overlay"></div>
    <div class="modal-container" role="document">
        <div class="modal-header">
            <button type="button" class="btn btn-clear float-right close-modal" aria-label="Close"></button>
            <div class="modal-title">Submit Link</div>
        </div>
        <div class="modal-body">
            <div class="content">
                <form id="submit-form" action="/create" method="POST">
                    <div class="form-group">
                        <label class="form-label" for="input-url">URL</label>
                        <input name="url" class="form-input" type="url" id="input-url" placeholder="URL" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="input-tags">Tags</label>
                        <input name="tags" class="form-input" id="input-tags" placeholder="Tags" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="input-title">Title</label>
                        <input name="title" class="form-input" type="text" id="input-title" placeholder="Title" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="input-description">Description</label>
                        <textarea class="form-input" id="input-description" name="description" placeholder="Description" rows="3"></textarea>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-link close-modal">Close</button>
            <button id="submit-link" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>
